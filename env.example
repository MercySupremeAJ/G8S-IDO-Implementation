# Environment variables for G8S IDO Platform
# Copy this file to .env and fill in your values

# Sepolia RPC URL (get from Infura, Alchemy, or other providers)
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# Private key of the account that will deploy contracts
# WARNING: Never commit this to version control!
PRIVATE_KEY=your_private_key_here

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Contract addresses (update after deployment)
TOKEN_CONTRACT_ADDRESS=0x8e90E7a1D70c38987B0bac7F2dbfDA41aD752AD7
IDO_CONTRACT_ADDRESS=0x98ad7104D652173Ca00BD89805625A15b950dbA9
TREASURY_ADDRESS=0x3F9F3Ef80CC1A53ba77a00B5ee66262ED2FEa72D
